{
  "manifest_version": 3,
  "name": "Spikely",
  "version": "2.2.0",
  "description": "Real-time Live Stream Artificial Intelligence",
  "permissions": ["storage", "activeTab", "tabs", "sidePanel", "scripting", "webNavigation", "contextMenus", "tabCapture", "offscreen"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["pcm-processor.js"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "*://*.tiktok.com/*",
    "*://*.twitch.tv/*",
    "*://*.kick.com/*",
    "*://*.youtube.com/*",
    "https://hnvdovyiapkkjrxcxbrv.functions.supabase.co/*",
    "https://hnvdovyiapkkjrxcxbrv.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": [
      "*://*.tiktok.com/*",
      "*://tiktok.com/*",
      "*://*.twitch.tv/*",
      "*://*.kick.com/*",
      "*://*.youtube.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Open Spikely"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "open-spikely-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open Spikely Side Panel"
    }
  }
}
