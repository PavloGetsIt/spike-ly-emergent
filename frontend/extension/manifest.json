{
  "manifest_version": 3,
  "name": "Spikely",
  "version": "2.1.4",
  "description": "Real-time Live Stream Artificial Intelligence",
  "permissions": ["storage", "activeTab", "tabs", "sidePanel", "scripting", "webNavigation", "contextMenus", "tabCapture", "offscreen"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["pcm-processor.js", "lvtContent.js"],
    "matches": ["https://*.tiktok.com/*"]
  }],
  "host_permissions": [
    "*://*.tiktok.com/*",
    "*://*.twitch.tv/*",
    "*://*.kick.com/*",
    "*://*.youtube.com/*",
    "https://hnvdovyiapkkjrxcxbrv.functions.supabase.co/*",
    "https://hnvdovyiapkkjrxcxbrv.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tiktok.com/@*/live",
        "https://www.tiktok.com/@*/live?*",
        "https://www.tiktok.com/live/*",
        "https://m.tiktok.com/@*/live",
        "https://m.tiktok.com/@*/live?*"
      ],
      "js": ["lvtContent.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "*://*.twitch.tv/*",
        "*://*.kick.com/*",
        "*://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Open Spikely"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "open-spikely-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open Spikely Side Panel"
    }
  }
}
